@charset "UTF-8";
@import url('https://fonts.googleapis.com/css?family=Poppins');
@import url('https://fonts.googleapis.com/css2?family=Oswald:wght@600&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Libre+Franklin:ital,wght@0,300;0,400;1,200;1,400&family=Oswald:wght@600&display=swap');



*{
    padding: 0px;
    margin: 0px;
    box-sizing: border-box;
    font-family: Poppins;
}

.header
{
    width: 100%;
    padding: 0px 5%;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: black;
    box-shadow: 0px 0px 10px black;
}


.header h2{
	font-family:Libre Franklin;
    color: blue;
    margin-left: 0px;
}

.header .links a{
    text-decoration:none;
    color: blue;
    padding:10px;
    font-size:15px;
    margin-right: 7px;
    gap:10px;
}

.header .links a:hover{
    color: white;
    transition: all ease-in 0.4s;
}

.landing-page{
    width:100%;
    height:630px;
    background-image: url("https://www.hdwallpapers.in/download/colorful_smoke_2-HD.jpg");
    background-repeat: no repeat;
    background-size:cover;
    color:white;
    display: flex;
    align-items: center;
    flex-direction: column;

}

.landing-page h1{
	font-family:Oswald;
    margin-top: 200px;
    font-size:90px;
}

.landing-page h1 span{
	color:red;
	font-family:Oswald;
    margin-top: 200px;
    font-size:90px;
}

.landing-page h2{
	font-family:Poppins;
	color: white;
    font-size: 30px;
    margin-bottom: 80px;

}